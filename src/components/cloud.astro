<div>
    <div class="cloud">
        <div id=content>
            <p>This is text</p>
            <p>This is also text</p>
        </div>
    </div>
</div>

<style>
    .cloud {
        background: var(--blue);
        border-radius: 100px;
        box-shadow: 0 8px 5px rgba(0, 0, 0, 0.1);
        height: 120px;
        position: relative;
        width: 350px;
    }

    .cloud:after, .cloud:before {
        background: var(--blue);
        content: '';
        position: absolute;
        z-indeX: -1;
    }

    .cloud:after {
        border-radius: 100px;
        height: 100px;
        left: 50px;
        top: -50px;
        width: 100px;
    }

    .cloud:before {
        border-radius: 200px;
        width: 180px;
        height: 180px;
        right: 50px;
        top: -90px;
    }

    #content{
        display: flex;
        justify-content: center;
        gap: 2rem;
    }
</style>